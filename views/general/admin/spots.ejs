<link rel="stylesheet" href="assets/css/pages/page_search_inner_tables.css">

<div class="container content-sm">

    <div class="text-center margin-bottom-35">
        <a href="#admin" class="btn btn-default"><i class="glyphicon glyphicon-backward"></i> Volver</a>
        <a href="#admin/spot" class="btn btn-info"><i class="glyphicon glyphicon-plus-sign"></i> Nuevo lugar</a>
    </div>
    <!-- Begin Table Search v2 -->
    <div class="table-search-v2">
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead>
                <tr>
                    <th>Foto</th>
                    <th class="hidden-sm">Spot</th>
                    <th>Deportes</th>
                    <th>Lugar</th>
                    <th>Acciones</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="spot in spots">
                    <td>
                        <img class="img-bordered" src="{{spot.url}}" alt="">
                    </td>
                    <td class="td-width">
                        <h3><a href="#">{{spot.name}}</a></h3>
                        <p>{{spot.description}}</p>
                    </td>
                    <td>
                        <span class="label label-success" ng-repeat="sport in spot.sports">{{sport}}</span>
                    </td>
                    <td>
                        <span><a href="#">{{spot.address}}</a></span>
                    </td>
                    <td>
                        <ul class="list-inline table-buttons">
                            <li><button type="button" class="btn-u btn-u-sm btn-u-dark" ng-click="editSpot(spot.alias)"><i class="fa fa-edit"></i></button></li>
                            <li><button type="button" class="btn-u btn-u-sm btn-u-dark" ng-click="deleteSpot(spot.alias)"><i class="fa fa-trash-o"></i></button></li>
                        </ul>
                    </td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!-- End Table Search v2 -->
</div>