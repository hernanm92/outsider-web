<!--=== Content Part ===-->
<div class="container content">
    <div class="row">

        <!-- Begin Content -->
        <div class="col-md-6 col-md-offset-3">
            <!-- General Unify Forms -->
            <form action="#" class="sky-form">
                <header>General Unify Forms</header>

                <fieldset>
                    <section>
                        <label class="label">Deporte</label>
                        <label class="select">
                            <select ng-model="sport">
                                <option value="0">Skate</option>
                                <option value="1">Longboard</option>
                                <option value="2">BMX</option>
                                <option value="3">Surf</option>
                                <option value="4">Ski</option>
                                <option value="5">Snowboard</option>
                            </select>
                            <i></i>
                        </label>
                    </section>

                    <section>
                        <label class="label">Subí la foto</label>
                        <label for="file" class="input input-file">
                            <div class="button"><input type="file" id="file" ng-model="resource" onchange="this.parentNode.nextSibling.value = this.value">Examinar</div><input type="text" readonly>
                        </label>
                    </section>

                    <section>
                        <label class="label">Escribí el post</label>
                        <label class="textarea textarea-resizable">
                            <i class="icon-append fa fa-comment"></i>
                            <textarea rows="3" placeholder="Escribite el post" ng-model="story"></textarea>
                        </label>
                        <div class="note"><strong>Nota:</strong> podés agrandar el área de texto.</div>
                    </section>

                </fieldset>

                <footer>
                    <button type="button" class="btn-u" onclick="upload()">Subir</button>
                    <button type="button" class="btn-u btn-u-default" onclick="window.history.back();">Volver</button>
                </footer>
            </form>
            <!-- General Unify Forms -->
        </div>
        <!-- End Content -->
    </div>
</div><!--/container-->
<!--=== End Content Part ===-->