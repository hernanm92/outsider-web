<!--=== Content Part ===-->
<div class="container content">
    <div class="row">
        <div class="col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3">
            <form class="reg-page">
                <div class="reg-header">
                    <h2>Iniciar sesión</h2>
                </div>

                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon"><i class="fa fa-user"></i></span>
                    <input type="text" placeholder="Usuario" class="form-control" ng-model="user">
                </div>
                <div class="input-group margin-bottom-20">
                    <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                    <input type="password" placeholder="Contraseña" class="form-control" ng-model="password">
                </div>

                <div class="row">
                    <div class="col-md-6 checkbox">
                        <label><input type="checkbox"> Quedate logueado</label>
                    </div>
                    <div class="col-md-6">
                        <button class="btn-u pull-right" type="button" ng-click="login()">Iniciar sesión</button>
                    </div>
                </div>

                <hr>

                <h4>Olvidaste la contraseña ?</h4>
                <p>No te preocupes, <a class="color-green" href="#">clickea acá</a> para resetearla.</p>
            </form>
        </div>
    </div><!--/row-->
</div><!--/container-->
<!--=== End Content Part ===-->